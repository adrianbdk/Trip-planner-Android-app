<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirestoreConnectionActivity">

    <Button android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:text="BACK"
    />

    <EditText android:id="@+id/inputOrigin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/backButton"
              android:hint="Enter your origin place"
              android:layout_margin="10dp"
              android:autofillHints="ok" android:inputType="text"
    />

    <EditText android:id="@+id/inputDest"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/inputOrigin"
              android:hint="Enter your destination place"
              android:layout_margin="10dp"
              android:autofillHints="ok" android:inputType="text"
    />

    <EditText android:id="@+id/inputDate"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/inputDest"
              android:hint="Enter date"
              android:layout_margin="10dp"
              android:autofillHints="ok" android:inputType="text" tools:ignore="TextFields"
    />

    <EditText android:id="@+id/inputPrice"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/inputDate"
              android:hint="Enter price"
              android:layout_margin="10dp"
              android:autofillHints="ok" android:inputType="text"
    />

    <Button android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPrice"
            android:layout_margin="10dp"
            android:text="SAVE"
    />

</androidx.constraintlayout.widget.ConstraintLayout>