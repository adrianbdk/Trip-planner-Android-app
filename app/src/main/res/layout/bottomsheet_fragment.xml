        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PotwierdÅº"
            android:textAllCaps="false"
            android:paddingHorizontal="20dp"
            android:textSize="20sp"
